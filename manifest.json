{
    "manifest_version": 3,
    "name": "Web Page Summarizer",
    "version": "1.0",
    "description": "A Chrome extension that greets you and summarizes web pages using Gemini AI",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "http://localhost:5000/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "48": "icon48.png",
        "128": "icon128.png"
    }
} 